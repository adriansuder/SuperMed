@model SuperMed.Models.ViewModels.CreateVisitViewModel

@{
    ViewData["Title"] = "Nowa wizyta - krok 1";
}

<h3>Zarejestruj nową wizytę</h3>

<a asp-controller="Patients" asp-action="Index">← Wróć do strony głównej</a>

<hr />
<form asp-controller="Patients" asp-action="CreateVisitStep2" method="post" class="form-group" role="form">
    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.DoctorName, Model.Doctors, "Wybierz doktora z listy dostępnych", new { @class = "form-control" })

            @foreach (var error in ViewData.ModelState.FindKeysWithPrefix("doctorError"))
            {
                <span class="text-danger float-right">@error.Value.Errors.FirstOrDefault()?.ErrorMessage</span>
            }

            <br />
            <label asp-for="StartDateTime">Wybierz datę wizyty</label>
            <div class="col-md-10">
                <input asp-for="StartDateTime" class="form-control" />
                <span asp-validation-for="StartDateTime" class="text-danger"></span>
            </div> 
            <br />
            <label asp-for="Description">Krótki opis</label>
            <div class="col-md-10">
                <textarea type="text" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: 33%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Krok 1</div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 col-md-10 mt-3">
                <input type="submit" class="btn btn-primary float-right" value="Idź do kroku 2" />
            </div>
        </div>
    </div>
</form>
